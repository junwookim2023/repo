    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Button Example</title>
</head>
<body>

    <!-- A simple button -->
    <button>Click me!</button>

    <!-- A button with some text inside -->
    <button>This is a button</button>

    <!-- A button with an onclick attribute (JavaScript function) -->
    <button onclick="alert('Button clicked!')">Click me for an alert</button>

</body>
</html>